{
  "short_name": "TabX",
  "name": "Tabs Closer",
  "permissions": [
    "tabs", "alarms"
  ],
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "favIcon.png",
    "default_popup": "popup.html",
    "default_title": "Tabs Closer"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "version": "1.0"
}
